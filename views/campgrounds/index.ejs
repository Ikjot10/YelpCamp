<% include ../partials/header %>

<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp</h1>
			<p>View these campgrounds from around the world!</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/campgrounds/new"> Add new Campground</a>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(campgrounds){ %>
			<div style="padding: 10px" class="col-md-3 col-sm-6">
				<div class="img-thumbnail">
					<img src=<%=campgrounds.image%> class="img-thumbnail">
					<div class="caption">
						<h4> <%= campgrounds.name %>	</h4>
					</div>
					<p> <a href="/campgrounds/<%= campgrounds._id%>" class="btn btn-primary"> More Info</a></p>
				</div>
			</div>
		<%}); %>
	</div>
</div>

<% include ../partials/footer %>
